{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "esModuleInterop": true,
    "module": "commonjs",
    "noEmit": true,
    "outDir": "dist",
    "paths": {
      "*": ["node_modules/"],
      "types/*": ["src/types/*"]
    },
    "strict": true,
    "target": "es5"
  },
  "include": ["src/**/*.ts"],
  "exclude": ["__tests__/**/*.test.ts"]
}
